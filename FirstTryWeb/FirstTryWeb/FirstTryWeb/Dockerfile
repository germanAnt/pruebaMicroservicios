FROM microsoft/dotnet:2.1-aspnetcore-runtime-nanoserver-1709 AS base
WORKDIR /app
EXPOSE 49928
EXPOSE 44365

FROM microsoft/dotnet:2.1-sdk-nanoserver-1709 AS build
WORKDIR /src
COPY FirstTryWeb/FirstTryWeb.csproj FirstTryWeb/
RUN dotnet restore FirstTryWeb/FirstTryWeb.csproj
COPY . .
WORKDIR /src/FirstTryWeb
RUN dotnet build FirstTryWeb.csproj -c Release -o /app

FROM build AS publish
RUN dotnet publish FirstTryWeb.csproj -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "FirstTryWeb.dll"]
